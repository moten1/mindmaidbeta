# ===========================
# MindMaid Frontend Environment Config
# ===========================
# Local development override: create .env.local in the project root

# ---------------------------
# Backend API URLs
# ---------------------------
# Production backend endpoint
REACT_APP_API_URL=https://mindmaid-backend.onrender.com

# Optional local development backend (override in .env.local)
# REACT_APP_API_URL_LOCAL=http://localhost:5000

# ---------------------------
# WebSocket Endpoint
# ---------------------------
# Production WebSocket (emotion + biometrics stream)
REACT_APP_WS_URL=wss://mindmaid-backend.onrender.com
REACT_APP_WS_PATH=/api/emotion/stream

# Optional local WebSocket (override in .env.local)
# REACT_APP_WS_URL_LOCAL=ws://localhost:5000

# ---------------------------
# Feature Toggles
# ---------------------------
REACT_APP_ENABLE_WARDROBE=true
REACT_APP_ENABLE_FOOD=true
REACT_APP_ENABLE_RELAXATION=true

# ---------------------------
# Emotion Analysis Settings
# ---------------------------
# Frames per second for emotion capture / analysis
REACT_APP_DEFAULT_FPS=4

# ---------------------------
# Optional Debugging / Logging
# ---------------------------
# Set to true to enable verbose logging in dev
# REACT_APP_DEBUG=false
