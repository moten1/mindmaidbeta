# ===========================
# Frontend Service Variables
# ===========================

# ---------------------------
# Backend API URLs
# ---------------------------
# Local development backend
REACT_APP_API_URL=http://localhost:5000
# Production backend (replace with your actual Render URL)
REACT_APP_API_URL_PROD=https://mindmaid-backend.onrender.com

# ---------------------------
# WebSocket URLs
# ---------------------------
# Local development WS
REACT_APP_WS_URL=ws://localhost:5000
# Production WS (replace with your actual Render URL)
REACT_APP_WS_URL_PROD=wss://mindmaid-backend.onrender.com

# ---------------------------
# Feature Toggles
# ---------------------------
REACT_APP_ENABLE_WARDROBE=true
REACT_APP_ENABLE_FOOD=true
REACT_APP_ENABLE_RELAXATION=true

# ---------------------------
# Optional Settings
# ---------------------------
# Default FPS for emotion analysis capture
REACT_APP_DEFAULT_FPS=4
