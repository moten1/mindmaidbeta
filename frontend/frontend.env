# ===========================
# Frontend Environment Config
# ===========================

# ---------------------------
# Backend API (production)
# ---------------------------
REACT_APP_API_URL=https://mindmaid-backend.onrender.com
REACT_APP_API_URL_PROD=https://mindmaid-backend.onrender.com

# ---------------------------
# WebSocket Endpoint (production)
# ---------------------------
# WebSocket must use the SAME HOST as backend
REACT_APP_WS_URL=wss://mindmaid-backend.onrender.com
REACT_APP_WS_URL_PROD=wss://mindmaid-backend.onrender.com

# ---------------------------
# WebSocket Emotion Stream Path
# ---------------------------
# Updated to match EmotionDrivenDashboard.js
REACT_APP_WS_PATH=/api/emotion/stream

# ---------------------------
# Feature Toggles
# ---------------------------
REACT_APP_ENABLE_WARDROBE=true
REACT_APP_ENABLE_FOOD=true
REACT_APP_ENABLE_RELAXATION=true

# ---------------------------
# Emotion Analysis Settings
# ---------------------------
# Frames per second for webcam â†’ backend
REACT_APP_DEFAULT_FPS=4
